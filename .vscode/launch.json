{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "postgres backend",
            "type": "cppdbg",
            "request": "attach",
            "program": "/data/homedata/lch/pg/bin/postgres",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}